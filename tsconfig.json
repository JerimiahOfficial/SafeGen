{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        /* Modules */
        "module": "CommonJS",
        "moduleResolution": "node",
        /* Emit */
        "outDir": "./dist",
        "rootDir": "./source",
        /* Interop Constraints */
        "esModuleInterop": true,
        //"allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        /* Type Checking */
        "strict": true,
        /* Completeness */
        "skipLibCheck": true
    }
}